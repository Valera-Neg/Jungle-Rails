<% @order.line_items.each do |line_item| %>
  <tr>
    <td>
       <%= image_tag line_item.product.image.tiny %>
    </td>
    <td>
      <%=  line_item.product.description%>
    </td>
    <td>
      <%= line_item.quantity%>
    </td>
    <td>
      <%=humanized_money_with_symbol line_item.product.price_cents / 100.0%>
    </td>
    <td>
      <%=humanized_money_with_symbol line_item.total_price_cents / 100.0 %>
    </td>
   </tr>
<% end %>